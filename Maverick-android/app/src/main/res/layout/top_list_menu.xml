<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E5DBDB"
    android:fillViewport="true"
    tools:context=".HomeActivity"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_launcher"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="#00FF00"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            />

        <!-- Header starts -->
        <!-- Header ends -->
        <!-- Login form -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dip"
            android:weightSum="1">


            <TextView
                android:id="@+id/Stream"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:textAppearance="?android:attr/textAppearanceLarge" />


            <Button
                android:id="@+id/rock"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:onClick="startListActivityRock"
                android:textColor="#00FF00"
                android:background="#000000"
                android:text="Rock" />

            <Button
                android:id="@+id/indie"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:onClick="startListActivityIndie"
                android:textColor="#00FF00"
                android:background="#000000"
                android:text="Indie" />

            <Button
                android:id="@+id/pop"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:onClick="startListActivityPop"
                android:textColor="#00FF00"
                android:background="#000000"
                android:text="Pop" />

            <Button
                android:id="@+id/pachangeo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:onClick="startListActivityPachangeo"
                android:textColor="#00FF00"
                android:background="#000000"
                android:text="Pachangeo" />

            <Button
                android:id="@+id/edm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:onClick="startListActivityedm"
                android:textColor="#00FF00"
                android:background="#000000"
                android:text="EDM" />
            <Button
                android:id="@+id/otros"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:onClick="startListActivityOtros"
                android:textColor="#00FF00"
                android:background="#000000"
                android:text="Otros" />
            <Button
                android:id="@+id/toplist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dip"
                android:onClick="startListActivityLikes"
                android:textColor="#00FF00"
                android:background="#000000"
                android:text="Top List" />
        </LinearLayout>

    </RelativeLayout>


</ScrollView>